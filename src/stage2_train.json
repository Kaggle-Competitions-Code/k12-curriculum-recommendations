{
    "output_dir": "output_dir/k12_stage2",
    "log_file_path": "logs/k12_stage2_bert_base.log",
    "num_train_epochs": 10,
    "evaluation_strategy": "epoch",
    "do_train": true,
    "do_eval": true,
    "per_device_train_batch_size": 90,
    "per_device_eval_batch_size": 90,
    "save_strategy": "epoch",
    "save_steps": 100,
    "save_total_limit": 10,
    "log_level": "info",
    "logging_strategy": "steps",
    "logging_steps": 50,
    "load_best_model_at_end": false,
    "optim": "adamw_torch",
    "group_by_length": false,
    "overwrite_output_dir": true,
    "learning_rate": 5e-5,
    "dataloader_drop_last": true,
